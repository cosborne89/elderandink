<%= simple_form_for [:admin, @tag] do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :title, label_html: { class: 'label-block' }, input_html: { class: 'form-full-width'} %>
  </div>
  <div class="field">
      <%= f.input :banner_image, label_html: { class: 'label-block' }, input_html: { class: 'form-full-width'} %>
  </div>
  <div class="field">
    <%= f.input :description, label_html: { class: 'label-block' }, input_html: { class: 'form-full-width'} %>
  </div>
  <div class="field">
    <%= f.association :posts, label_html: { class: 'label-block' }, input_html: { class: 'form-full-width'} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
