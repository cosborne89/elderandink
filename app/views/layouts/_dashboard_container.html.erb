<h4>User Indexes</h4>
<ul>
  <li><%= link_to "Posts", posts_path %></li>
  <li><%= link_to "Category", categories_path %></li>
  <li><%= link_to "Series", series_index_path %></li>
  <li><%= link_to "Tags", tags_path %></li>
  <li><%= link_to "Comments", admin_comments_path %></li>
</ul>
<% if current_user && is_admin(current_user) %>
  <h4>Admin Indexes</h4>
  <ul>
    <li><%= link_to "Posts", admin_posts_path %></li>
    <li><%= link_to "Post Dashboard", dashboard_admin_posts_path %></li>
    <li><%= link_to "Category", admin_categories_path %></li>
    <li><%= link_to "Series", admin_series_index_path %></li>
    <li><%= link_to "Tags", admin_tags_path %></li>
    <li><%= link_to "Comments", admin_comments_path %></li>
  </ul>

<h4>New</h4>
<ul>
  <li><%= link_to "Post", new_admin_post_path %></li>
  <li><%= link_to "Category", new_admin_category_path %></li>
  <li><%= link_to "Series", new_admin_series_path %></li>
  <li><%= link_to "Tag", new_admin_tag_path %></li>
</ul>

<% end %>

<% if current_user %>
  <p>Logged in as <%= current_user.email %></p>
  <p><%= button_to "Logout", logout_path, :method => :delete %></p>
<% else %>
  <p>Not logged in. <%= link_to "Log in", login_path %></p>
<% end %>