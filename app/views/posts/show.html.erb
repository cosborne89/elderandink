<p id="notice"><%= notice %></p>

<div class="post-title" >
  <h2><%= @post.title %></h2>
</div>
<div class="post-date" >
  <%= @post.published_date.to_formatted_s(:long_ordinal)  %>
</div>
<div class="post-body" >
  <%= @post.body %>
</div>
  
  <%= @post.title_image %>

<div class="post-tags" >
  Filed under 
    <% @post.tags.each do |tag| %><%= link_to tag.title, tag %><% if tag == @post.tags.last %>.<% else %>, <% end %><% end %>
</div>  
<div class="post-category" >
  Posted in <%= link_to @post.category.title, @post.category %>
</div>
    <% if @post.series %>
      <div class="post-series" >
        Part of the <%= link_to @post.series.title, @post.series %> series.
      </div>
    <% end %> 
<div class="post-comments" >
  <div class="comment-count" >
    <%= @post.comments.count %> Comments
  </div>
  <% @post.comments.each do |comment| %>
    <div class="comment-block" >
      <div class="comment-header" >
        <%= comment.author %> on <%= comment.created_at.to_date().to_formatted_s(:long_ordinal)  %>:
      </div>
      <div class="comment-body" >
        <%= comment.body %>
      </div>
    </div>
  <% end %>
  <%= link_to "Add a comment", new_comment_path %>
</div>  

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
